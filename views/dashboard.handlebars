<ul>
    {{#each posts as |post|}}
    <li class="dashboard-post">
        <div>
            <span>{{post.post_title}}</span><span>{{format_date created_at}}</span>
        </div>
        <p>{{post.comment_count}} comments</p>
    </li>
    {{/each}}
    {{#unless posts}}
    <p>You don't have any posts yet.</p>
    {{/unless}}
</ul> 